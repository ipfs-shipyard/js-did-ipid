{
  "name": "did-ipid",
  "version": "0.0.0",
  "description": "The IPID DID method implementation in JavaScript",
  "main": "index.js",
  "homepage": "https://github.com/ipfs-shipyard/js-did-ipid#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ipfs-shipyard/js-did-ipid.git"
  },
  "keywords": [
    "ipid",
    "did",
    "identity",
    "ipfs",
    "ipns",
    "js",
    "javascript"
  ],
  "bugs": {
    "url": "https://github.com/ipfs-shipyard/js-did-ipid/issues"
  },
  "files": [
    "lib",
    "es"
  ],
  "scripts": {
    "build:commonjs": "BABEL_ENV=commonjs babel src -d lib",
    "build:es": "BABEL_ENV=es babel src -d es",
    "build": "npm run build:commonjs && npm run build:es",
    "test": "jest",
    "lint": "eslint .",
    "prerelease": "npm t && npm run lint && npm run build",
    "release": "standard-version"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "standard-version": {
    "scripts": {
      "posttag": "git push --follow-tags origin master"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "./src/**/*.js"
    ],
    "testRegex": "/__tests__/.*\\.test\\.js$",
    "testPathIgnorePatterns": [
      "/lib/",
      "/es/",
      "/node_modules/"
    ]
  },
  "peerDependencies": {
    "ipfs": "^0.34.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-private-methods": "^7.3.2",
    "@commitlint/config-conventional": "^7.5.0",
    "babel-jest": "^24.1.0",
    "babel-preset-moxy": "^3.0.4",
    "commitlint": "^7.5.2",
    "eslint": "^5.13.0",
    "eslint-config-moxy": "^7.0.1",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.4",
    "standard-version": "^5.0.0"
  },
  "dependencies": {
    "buffer": "^5.2.1",
    "libp2p-crypto": "^0.16.1",
    "lodash": "^4.17.11",
    "peer-id": "^0.12.2",
    "pify": "^4.0.1"
  }
}
